{
    "manifest_version": 2,
    "name": "LReadability",
    "version": "1.0",
    "background" : {
        "scripts" : ["background.js"]
    },
    "browser_action": {
        "default_icon": "logo.png"
    },
    "web_accessible_resources": [
        "css/*"
    ],
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["readability.js", "content.js"]
        }
    ],
    "permissions": ["activeTab", "storage"]
}
